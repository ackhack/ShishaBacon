<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_weight="1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tm_name"
        android:layout_weight="1"/>
    <TextView
        android:text="Hersteller"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_weight="1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tm_manufacturer" 
        android:layout_weight="1"/>
    <TextView
        android:text="Bewertung"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tm_rating_name"
        android:layout_weight="1"/>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tm_rating"
        android:max="100"
        android:min="0"
        android:layout_weight="1"/>
    <TextView
        android:text="Durchschnittliche Bewertung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tm_avgRating" 
        android:layout_weight="1"/>
    <ListView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tm_ratings"
        android:layout_weight="1000000000"/>
    <Button
        android:text="Speichern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tm_save" 
        android:layout_weight="1"/>
    <Button
        android:text="LÃ¶schen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tm_delete" 
        android:layout_weight="1"/>

</LinearLayout>
